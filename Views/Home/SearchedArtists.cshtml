@model List<bandsintown_app.Models.ArtistDataSearch>

@{

    if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @* Result text div *@
            <div class="col-md-12">
                <h4 name="resultsCountText" style="margin: 1em 0em 0em 0em;">
                    @Model.Count Results found for "@ViewBag.searchedTerm"
                </h4>
            </div>
        </div>
        <div class="row">
            @* Cards div *@

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="row">

                        <div class="card" style="margin:1.25em;">
                            <img src="@item.imageSrc" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">@item.name</h5>
                                <p class="card-text">@item.verifiedSrc</p>
                                @*<a href="#" class="btn btn-primary">Go somewhere</a>*@
                            </div>
                        </div>

                    </div>
                </div>

            }
        </div>
    }
}


