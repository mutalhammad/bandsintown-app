@model List<bandsintown_app.Models.ArtistDataSearch>

@{
    if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @* Result text div *@
            <div class="col-md-12">
                <h4 name="resultsCountText" style="margin: 1em 0em 0em 0em;">
                    @Model.Count Results found for "@ViewBag.searchedTerm"
                </h4>
            </div>
        </div>
        <div class="row">
            @* Cards div *@

            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="row">

                        <div class="card" style="margin:1.25em;">
                            <img src="@item.imageSrc" class="card-img-top" name="@item.name"  alt="...">
                            <div class="card-body">
                                <a href="@Url.Action("ArtistEventDetails", "Home", new { selectedArtistName = item.name })" style="color:black;">@item.name</a>
                                <a name="@item.name" href="@item.artistData.facebook_page_url">@item.artistData.facebook_page_url</a>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    }
}